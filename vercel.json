{
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://youtube-production-ee12.up.railway.app/api/:path*"
    },
    {
      "source": "/audio/:path*",
      "destination": "https://youtube-production-ee12.up.railway.app/audio/:path*"
    },
    {
      "source": "/((?!assets|icons|favicon|apple-touch-icon|manifest|browserconfig).*)",
      "destination": "/index.html"
    }
  ]
}